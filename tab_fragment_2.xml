<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:layout_weight="2"
tools:context="com.example.computer.myproject.TabFragment1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:src="@drawable/ronaldo_juventus"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:text="Ronaldo rồi sẽ giải cơn khát ghi bàn cho Juventus..."
        android:textAlignment="center"
        android:ems="10"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:id="@+id/editText" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:src="@drawable/luong_cristiano_ronaldo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:paddingTop="50dp"
            android:text="Ronaldo làm Vua Serie A "
            android:ems="10"
            android:textAlignment="center"
            android:layout_gravity="fill_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:src="@drawable/luong_ronaldo_messi_top"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:paddingTop="70dp"
            android:text="Messi không ngờ Ronaldo làm cú nhảy ngoạn mục như vậy"
            android:ems="10"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>

</LinearLayout>